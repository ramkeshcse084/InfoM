<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp"

    android:orientation="vertical"
    tools:context="com.nestedmango.infom.BasicInfoM">

    <TextView
        android:id="@+id/textViewHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="50dp"
        android:textColor="@android:color/black"
        android:text="BasicInfoDevice" />

    <TextView
        android:id="@+id/txtFingerPr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FingerPrint:"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewFinger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_light"
        android:text="fingerPr" />
    <TextView
        android:id="@+id/txtosIncrement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OsIncrement:"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textViewOsIncrement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_light"
        android:text="OsIncrement" />

</LinearLayout>
